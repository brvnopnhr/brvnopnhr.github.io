<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="type" type="list"
			label="COM_ABOOK_EXPORT_TYPE" description="COM_ABOOK_EXPORT_TYPE_DESC"
			class="inputbox" filter="intval" size="1" default="1">
                        <option value="1">COM_ABOOK_MYSQL</option>
                        <option value="2">COM_ABOOK_CSV</option>
                </field>
		<field name="type2" type="list"
                        label="COM_ABOOK_IMPORT_TYPE" description="COM_ABOOK_IMPORT_TYPE_DESC"
                        class="inputbox" filter="intval" size="1" default="1">
                        <option value="1">COM_ABOOK_MYSQL</option>
                        <option value="2">COM_ABOOK_CSV</option>
                </field>
		<field name="category" type="categoryedit" extension="com_abook" show_root="false"
                        label="JCATEGORY" description="COM_ABOOK_FIELD_CATEGORY_DESC"
                        class="inputbox" required="true" />
		<field name="category2" type="categoryedit" extension="com_abook" show_root="false"
                        label="JCATEGORY" description="COM_ABOOK_FIELD_CATEGORY_DESC"
                        class="inputbox" required="true" />
		<field name="user" type="user"
                        label="COM_ABOOK_IMPORT_USER" description="COM_ABOOK_IMPORT_USER_DESC">
                </field>
		<field name="import_file"
                        type="file" accept="text/*"
                        label="COM_ABOOK_FIELD_PARAMS_EBOOK_LABEL"
                        description="COM_ABOOK_FIELD_PARAMS_EBOOK_DESC"
                />
		<field name="db" type="radio"
                        label="COM_ABOOK_IMPORT_DB" description="COM_ABOOK_IMPORT_DB_DESC"
                        class="btn-group btn-group-yesno" default="0">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
	</fieldset>
</form>
